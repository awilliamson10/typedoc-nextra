{
    "compilerOptions": {
        "allowJs": false,
        "strict": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": false,
        "lib": ["ES2022"],
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "outDir": "dist"
    },
    "include": ["src"]
}